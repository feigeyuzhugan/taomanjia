<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/AppBaseTheme"/>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏的颜色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--通知栏等的颜色-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--字体的主题颜色-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--解决textView全局大小写问题-->
        <item name="android:textAllCaps">false</item>
        <!-- toolbar中带动画效果的箭头，设置动画形式与箭头颜色 -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- toolbar中menu的文字的颜色,并非溢出菜单的内容文字颜色 -->
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:windowAnimationStyle">@style/pageInOut</item>
    </style>

    <!-- 页面跳转间的过渡动画 -->
    <style name="pageInOut">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>

        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>

        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_left</item>

        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <!-- 左边的箭头指示-->
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="loginUserNameStyleWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="loginTextStyleWhite">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="userTopTextStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
    </style>
    <!--条目的布局情况 -->
    <style name="textStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:drawablePadding">@dimen/padding_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableRight">@drawable/rightbtn</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_1dp</item>
        <item name="android:textSize">@dimen/textsize_common</item>
    </style>
    <!--条目的布局情况 -->
    <style name="textStyle_no_drawable">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:drawablePadding">@dimen/padding_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_1dp</item>
        <item name="android:textSize">@dimen/textsize_common</item>
    </style>
    <!--
        edittext的整合
          android:layout_centerVertical="true"
        android:background="@null"
    -->
    <style name="edittextStyle" >
        <item name="android:padding">@dimen/padding_10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
    </style>
<!--    <style name="edittextStyle_centerVertical" parent="edittextStyle">
        <item name="layout_centerVertical">true</item>
    </style>-->
</resources>
