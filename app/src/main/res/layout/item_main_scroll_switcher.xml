<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/x2"
    android:layout_marginBottom="5dp">

    <TextView
        android:id="@+id/item_main_switcher_tv"
        android:layout_width="73dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:text="淘满家 快报"/>
    <com.zhongzi.taomanjia.view.widget.view_switcher.UpDownViewSwitcher
        android:layout_toRightOf="@id/item_main_switcher_tv"
        android:id="@+id/item_main_switcher_up"
        app:animator_duration="400"
        app:switch_duration="3000"
        app:up_to_down="false"
        app:animator_translate_distance="40dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</RelativeLayout>
