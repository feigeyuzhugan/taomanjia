<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:padding="@dimen/padding_5dp"
            android:text="今日推荐"
            android:textSize="@dimen/sp20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_10dp"
            android:padding="@dimen/padding_5dp"
            android:text="更多>>>" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/today_recommend_img_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x1"
            android:layout_weight="1"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/today_recommend_img_2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="@dimen/x1"
            android:layout_height="wrap_content"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/today_recommend_img_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="@dimen/x1"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/today_recommend_name_1"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"/>
        <TextView
            android:id="@+id/today_recommend_name_2"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"/>
        <TextView
            android:id="@+id/today_recommend_name_3"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/today_recommend_price_1"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"/>
        <TextView
            android:id="@+id/today_recommend_price_2"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"/>
        <TextView
            android:id="@+id/today_recommend_price_3"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="名称"/>
    </LinearLayout>

</LinearLayout>
