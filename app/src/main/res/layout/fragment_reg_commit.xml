<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/linearlayout_divider_height_gray"
        android:showDividers="middle"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/reg_commit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittextStyle"
            android:hint="用户名"/>

        <EditText
            android:id="@+id/reg_commit_realname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittextStyle"
            android:hint="真实姓名"/>

        <EditText
            android:id="@+id/reg_commit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittextStyle"
            android:hint="密码"/>

        <EditText
            android:id="@+id/reg_commit_pwd_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittextStyle"
            android:hint="确认密码"/>

        <EditText
            android:id="@+id/reg_commit_share_people"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/edittextStyle"
            android:hint="分享人信息"/>

        <Button
            android:id="@+id/reg_commit_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="确认注册"/>
    </LinearLayout>

</ScrollView>
