<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_btn1"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_1"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                app:placeholderImage="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="消费区" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn2"
            style="@style/main_8icon_btn"
            android:layout_height="wrap_content">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_2"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                app:placeholderImage="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="换购区" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn3"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_3"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                android:src="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="品牌墙" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn4"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_4"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                android:src="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="异业联盟" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_btn5"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_5"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                android:src="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="共享红包" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn6"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_6"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                android:src="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="养老积分" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn7"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_7"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                android:src="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="分享积分" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn8"
            style="@style/main_8icon_btn">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_icon_8"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:viewAspectRatio="1"
                android:layout_gravity="center"
                android:src="@drawable/default_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="盛世金元" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>