<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:divider="@drawable/linearlayout_divider_width_gray"
    android:orientation="vertical"
    android:showDividers="middle">

    <LinearLayout
        android:id="@+id/reg_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reg_default"
        android:background="@drawable/forgetpassword_b1"
        android:clickable="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reg_phonenum_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/forget_password_select1"
            android:enabled="true"
            android:gravity="center"
            android:text="1.手机验证"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/reg_commit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2.确认注册"
            android:textSize="16sp" />
    </LinearLayout>
