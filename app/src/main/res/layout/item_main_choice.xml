<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/x4"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="淘满家精选"
            android:textSize="@dimen/sp20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="更多>>>" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x2"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_choice_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:placeholderImageScaleType="fitXY"
                app:placeholderImage="@drawable/default_img"
                app:viewAspectRatio="0.5" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_margin="@dimen/x2"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_main_choice_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:placeholderImage="@drawable/default_img"
                app:viewAspectRatio="1.5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/padding_0dp"
                android:layout_weight="1"
                android:layout_margin="@dimen/x2"
                android:orientation="horizontal">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/item_main_choice_3"
                    android:layout_width="@dimen/padding_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:placeholderImage="@drawable/default_img"
                    app:viewAspectRatio="1.5" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/item_main_choice_4"
                    android:layout_width="@dimen/padding_0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/x2"
                    android:layout_weight="1"
                    app:placeholderImage="@drawable/default_img"
                    app:viewAspectRatio="1.5" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_main_choice_5"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/x2"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1.5" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_main_choice_6"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/x2"
            android:layout_weight="1"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1.5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_main_choice_7"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/x2"
            android:layout_weight="1"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1.5" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/item_main_choice_8"
            android:layout_width="@dimen/padding_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_margin="@dimen/x2"
            app:placeholderImage="@drawable/default_img"
            app:viewAspectRatio="1.5" />
    </LinearLayout>

</LinearLayout>
